<Application
	x:Class="Evo.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Evo"
	>
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
        <!--  Other merged dictionaries here  -->
      </ResourceDictionary.MergedDictionaries>

      <!--  Other app resources here  -->
      <x:String x:Key="Padding">32</x:String>
      <x:String x:Key="LeftPadding">32, 0, 0, 0</x:String>
      <x:String x:Key="Margin">32, 0, 32, 32</x:String>

      <x:String x:Key="Radius">16</x:String>
      <x:String x:Key="SharpRadius">4</x:String>
      <x:String x:Key="ButtonWidth">100</x:String>

      <x:String x:Key="SmSeparation">8</x:String>
      <x:String x:Key="LgSeparation">16</x:String>

      <x:String x:Key="SmFontSize">14</x:String>
      <x:String x:Key="MdFontSize">18</x:String>
      <x:String x:Key="LgFontSize">24</x:String>
    </ResourceDictionary>

  </Application.Resources>
</Application>
